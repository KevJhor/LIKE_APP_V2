<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#009688">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout2">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="409dp"
            android:layout_height="303dp"
            android:background="#009688"
            android:backgroundTint="#009688"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:id="@+id/ivVoucher"
                android:layout_width="309dp"
                android:layout_height="168dp"
                android:layout_above="@+id/btnVerOrden"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                tools:srcCompat="@drawable/voucher" />

            <Button
                android:id="@+id/btnVerOrden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="6dp"
                android:text="@string/valbtnDetalle" />

            <TextView
                android:id="@+id/tvNrOrden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ivVoucher"
                android:layout_alignParentStart="true"
                android:layout_marginStart="61dp"
                android:layout_marginBottom="17dp"
                android:text="Nro Orden" />

            <TextView
                android:id="@+id/tvOrden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ivVoucher"
                android:layout_marginStart="187dp"
                android:layout_marginBottom="17dp"
                android:layout_toEndOf="@+id/tvNrOrden"
                android:text="00XX" />

            <Button
                android:id="@+id/btnVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="93dp"
                android:layout_marginBottom="6dp"
                android:layout_toEndOf="@+id/btnVerOrden"
                android:text="Validar" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>