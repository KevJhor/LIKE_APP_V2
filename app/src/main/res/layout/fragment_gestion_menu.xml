<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >



<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Gestion.GestionMenus">


    <TextView
        android:id="@+id/categorias_"
        android:layout_width="226dp"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:gravity="top"
        android:lineSpacingExtra="10sp"
        android:text="@string/categorias_"
        android:textAppearance="@style/categorias_"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <RelativeLayout
        android:id="@+id/rlCatMenus"
        android:layout_width="387dp"
        android:layout_height="243dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/imgrectanglemenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnCrearCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="53dp"
            android:backgroundTint="@color/teal_200"
            android:text="Crear" />

        <Button
            android:id="@+id/btnModifCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="51dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/btnModifCate" />

        <TextView
            android:id="@+id/crea_o_modi"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCategoria"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="85dp"
            android:text="@string/crea_o_modi"
            android:textAppearance="@style/crea_o_modi" />

        <EditText
            android:id="@+id/etCategoria"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spnCategorias"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="text" />

        <Spinner
            android:id="@+id/spnCategorias"
            android:layout_width="354dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="21dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnAgregarPlato"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/teal_200"
        android:text="Agregar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlMenus" />

    <Button
        android:id="@+id/btnModificarPlato"
        android:layout_width="125dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/teal_200"
        android:text="Modificar"
        app:layout_constraintStart_toEndOf="@+id/btnAgregarPlato"
        app:layout_constraintTop_toBottomOf="@+id/rlMenus" />

    <Button
        android:id="@+id/btnEliminarPlato"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/teal_200"
        android:text="Eliminar"
        app:layout_constraintStart_toEndOf="@+id/btnModificarPlato"
        app:layout_constraintTop_toBottomOf="@+id/rlMenus" />

    <RelativeLayout
        android:id="@+id/rlMenus"
        android:layout_width="392dp"
        android:layout_height="355dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/imgrectanglemenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlCatMenus">

        <EditText
            android:id="@+id/etImgPlato"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etDescripPlato"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="@string/etImgMenu"
            android:inputType="text" />

        <EditText
            android:id="@+id/etPrecioPlato"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_below="@+id/etDescripPlato"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="46dp"
            android:ems="10"
            android:hint="Precio"
            android:inputType="text" />

        <EditText
            android:id="@+id/etDescripPlato"
            android:layout_width="345dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="147dp"
            android:layout_marginEnd="26dp"
            android:ems="10"
            android:hint="Descripcion"
            android:inputType="text" />

        <Spinner
            android:id="@+id/spinnerCategoriasMenus"
            android:layout_width="357dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="23dp" />

        <EditText
            android:id="@+id/etNomPLato"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="125dp"
            android:ems="10"
            android:hint="@string/nombrePlato"
            android:inputType="text" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/tvRegistroMenu"
        app:layout_constraintBottom_toTopOf="@+id/rlMenus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>