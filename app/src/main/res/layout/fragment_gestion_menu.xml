<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >



<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Gestion.GestionMenus">


    <TextView
        android:id="@+id/categorias_"
        android:layout_width="248dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="top"
        android:lineSpacingExtra="10sp"
        android:text="@string/categorias_"
        android:textAppearance="@style/categorias_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlCatMenus"
        android:layout_width="386dp"
        android:layout_height="271dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/imgrectanglemenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnCrearCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="53dp"
            android:backgroundTint="@color/figma_btn_rest"
            android:text="Crear" />

        <Button
            android:id="@+id/btnModifCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="51dp"
            android:backgroundTint="@color/figma_btn_rest"
            android:text="@string/btnModifCate" />

        <TextView
            android:id="@+id/crea_o_modi"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCategoria"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="85dp"
            android:text="@string/crea_o_modi"
            android:textAppearance="@style/crea_o_modi" />

        <EditText
            android:id="@+id/etCategoria"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spnCategorias"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="text" />

        <Spinner
            android:id="@+id/spnCategorias"
            android:layout_width="354dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="21dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnAgregarPlato"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/figma_btn_rest"
        android:text="Agregar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlMenus" />

    <RelativeLayout
        android:id="@+id/rlMenus"
        android:layout_width="388dp"
        android:layout_height="490dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/imgrectanglemenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlCatMenus">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="345dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="448dp"
            android:text="@string/lblAgregaCateGestionMenu" />

        <EditText
            android:id="@+id/etImgPlato"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_below="@+id/etPrecioPlato"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="37dp"
            android:ems="10"
            android:hint="@string/etImgMenu"
            android:inputType="text" />

        <EditText
            android:id="@+id/etPrecioPlato"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_below="@+id/etDescripPlato"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="58dp"
            android:ems="10"
            android:hint="@string/hintPrecioGestMenu"
            android:inputType="text" />

        <EditText
            android:id="@+id/etDescripPlato"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="215dp"
            android:layout_marginEnd="19dp"
            android:ems="10"
            android:hint="@string/hintDescripMenu"
            android:inputType="text" />

        <Spinner
            android:id="@+id/spinnerCategoriasMenus"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="37dp" />

        <EditText
            android:id="@+id/etNomPLato"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="36dp"
            android:ems="10"
            android:hint="@string/nombrePlato"
            android:inputType="text" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:breakStrategy="high_quality"
        android:text="@string/tvRegistroMenu"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rlMenus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>