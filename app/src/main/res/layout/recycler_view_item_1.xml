<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="401dp"
        android:layout_height="185dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="19dp">

            <View
                android:id="@+id/viewImgRest"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:background="@drawable/productimabeef" />

            <TextView
                android:id="@+id/tvInfoRest"
                android:layout_width="178dp"
                android:layout_height="81dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/viewImgRest"
                android:text="@string/infoRest" />

            <TextView
                android:id="@+id/tvTitleRest"
                android:layout_width="157dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/viewImgRest"
                android:text="@string/titleRest"
                android:textAppearance="@style/title_rest" />
        </RelativeLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>