<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LIKE_APP"
        tools:targetApi="31">
        <activity
            android:name=".RestauranteActivity"
            android:exported="false"
            android:label="@string/title_activity_restaurante"
            android:theme="@style/Theme.LIKE_APP.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LIKE_APP.NoActionBar"></activity>
        <activity
            android:name=".ui.users.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".ui.users.LoginActivity"
            android:exported="true"
            android:label="@string/LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>